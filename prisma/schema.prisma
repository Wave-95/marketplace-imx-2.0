// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  email      String?  @unique
  address    String   @unique
  sales      Sale[]
}

model Asset {
  id          Int      @id @default(autoincrement())
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  metadata    Metadata @relation(fields: [metadata_id], references: [id])
  metadata_id Int
  Sale        Sale[]
}

model Metadata {
  id            Int          @id @default(autoincrement())
  created_at    DateTime     @default(now())
  updated_at    DateTime     @updatedAt
  name          String
  image         String
  rarity        String
  attack        Int
  set           String
  item_type     String
  assets        Asset[]
  sale_details  SaleDetail[]
  token_address String
}

model SaleDetail {
  id                     Int       @id @default(autoincrement())
  created_at             DateTime  @default(now())
  updated_at             DateTime  @updatedAt
  metadata               Metadata  @relation(fields: [metadata_id], references: [id])
  metadata_id            Int
  price                  String?
  currency_token_address String    @default("") //Check if "" is ETH
  start_at               DateTime?
  end_at                 DateTime?
  total_supply           Int?
  quantity_sold          Int       @default(0)
  sales                  Sale[]
  active                 Boolean   @default(true)
  treasury_address       String
}

model Sale {
  id             String     @id @default(uuid())
  created_at     DateTime   @default(now())
  updated_at     DateTime   @updatedAt
  user           User       @relation(fields: [user_id], references: [id])
  user_id        String
  sale_detail    SaleDetail @relation(fields: [sale_detail_id], references: [id])
  sale_detail_id Int
  asset          Asset      @relation(fields: [asset_id], references: [id])
  asset_id       Int
  payment_id     Int?       @unique //This is the transfer ID
}
